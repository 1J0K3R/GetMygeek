<MudCard Style="width: 300px;">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Color="Color.Secondary">@Profil.NameTrigramme</MudAvatar>
        </CardHeaderAvatar>

        <CardHeaderContent>
            <MudText Typo="Typo.body1">@Profil.Name</MudText>
            <MudText Typo="Typo.body2">@Profil.Title</MudText>
        </CardHeaderContent>

        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
        </CardHeaderActions>

    </MudCardHeader>
    
    <center>
        <MudImage Src="@Profil.ImageUrl" Width="237" Height="355" Alt="Photo du profil" Elevation="25" Class="rounded-lg ma-4" />
    </center>

    <MudCardContent>
        <MudText Typo="Typo.body2">Téléphone : @Profil.PhoneNumber</MudText>
        <MudText Typo="Typo.body2">Mail : @Profil.Mail</MudText>
    </MudCardContent>


    <MudCardContent Class="d-flex justify-center">
            @if (Profil.IsFree == true)
            {
            <MudButton Variant="Variant.Filled" Color="Color.Error" Class="ml-5 mr-5" @onclick="async () => await OpenMissionInformationAsync()">En Mission</MudButton>
            }
            else
            {
            <MudButton Variant="Variant.Filled" Color="Color.Success" Class="ml-5 mr-5" >Libre</MudButton>
            }

        <MudButton Variant="Variant.Filled" Color="Color.Warning" Class="ml-5 mr-5" >DDC</MudButton>
    </MudCardContent>

    <MissionPopup @ref="missionPopup" />

    <MudCardActions>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
        <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Default" />
    </MudCardActions>
</MudCard>